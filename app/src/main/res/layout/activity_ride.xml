<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ride"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.apockestafe.team19.Ride">

    <TextView
        android:id="@+id/seatsValue"
        android:text="                    "
        android:layout_alignBaseline="@+id/seatsTextView"
        android:layout_alignBottom="@+id/seatsTextView"
        android:layout_toEndOf="@+id/seatsTextView"
        android:layout_width="100.0dp"
        android:layout_height="40.0dp" />

    <Button
        android:text="Go Back to Map"
        android:layout_width="match_parent"
        android:id="@+id/backButton"
        android:layout_weight="50"
        android:background="#a4e8ad"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="175.0dp"
        android:id="@+id/listViewOfPeople"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/errorText"
        android:text=""
        android:layout_width="300.0dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/listViewOfPeople"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_height="40.0dp" />

    <TextView
        android:text="Friends Currently Signed Up"
        android:layout_width="wrap_content"
        android:id="@+id/words"
        android:layout_above="@+id/listViewOfPeople"
        android:layout_centerHorizontal="true"
        android:layout_height="30.0dp" />

    <Button
        android:text="Add To Car"
        android:id="@+id/addToCarButton"
        android:background="#ffd1d1"
        android:textColor="@android:color/white"
        android:layout_marginTop="19dp"
        android:layout_height="40dp"
        android:layout_width="100dp"
        android:layout_below="@+id/errorText"
        android:layout_alignStart="@+id/seatsTextView" />

    <Button
        android:text="Remove From Car"
        android:id="@+id/removeFromCarButton"
        android:background="#d1e8ff"
        android:textColor="@android:color/white"
        android:layout_marginEnd="22dp"
        android:layout_height="40dp"
        android:layout_width="100dp"
        android:layout_alignTop="@+id/addToCarButton"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Number of Seats Left:"
        android:id="@+id/seatsTextView"
        android:layout_width="150.0dp"
        android:layout_marginStart="16dp"
        android:layout_above="@+id/words"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:layout_height="40.0dp" />

</RelativeLayout>
