<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apockestafe.team19.EventActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Title"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_below="@+id/title"
        android:layout_alignEnd="@+id/title"
        android:layout_alignStart="@+id/title"
        android:inputType="date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/textView2"
        android:layout_below="@+id/date"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_below="@+id/date"
        android:layout_alignEnd="@+id/date"
        android:layout_alignStart="@+id/date"
        android:inputType="time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/textView3"
        android:layout_below="@+id/time"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/street"
        android:layout_below="@+id/time"
        android:layout_alignEnd="@+id/time"
        android:layout_alignStart="@+id/time"
        android:hint="Street Address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="City"
        android:ems="10"
        android:layout_below="@+id/street"
        android:id="@+id/city"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/street" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="State"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/street"
        android:id="@+id/state"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Zipcode"
        android:ems="10"
        android:id="@+id/zipcode"
        android:layout_below="@+id/state"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/state"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/textView4"
        android:layout_below="@+id/zipcode"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <EditText
        android:layout_height="50dp"
        android:id="@+id/description"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_width="300dp"
        android:layout_toEndOf="@+id/textView4" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Create"
        android:id="@+id/button_create"
        android:layout_marginBottom="13dp"
        android:background="#ffd1d1"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Cancel"
        android:id="@+id/button"
        android:background="#d1e8ff"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/button_create"
        android:layout_alignBottom="@+id/button_create"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
