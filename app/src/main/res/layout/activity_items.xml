<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apockestafe.team19.ItemsActivity">

    <Button
        android:text="Add Item"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/addItemEditText"
        android:layout_centerHorizontal="true"
        android:background="#d1e8ff"
        android:textColor="@android:color/white"
        android:layout_marginTop="21dp"
        android:id="@+id/addItemButton" />

    <EditText
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/addItemEditText"
        android:layout_width="250.0dp"
        android:layout_height="50.0dp"
        android:layout_alignBaseline="@+id/addItemTextView"
        android:layout_alignBottom="@+id/addItemTextView"
        android:layout_toEndOf="@+id/addItemTextView" />

    <ListView
        android:layout_width="300.0dp"
        android:id="@+id/itemsListView"
        android:layout_height="250.0dp"
        android:layout_below="@+id/backButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <TextView
        android:text="New Item: "
        android:id="@+id/addItemTextView"
        android:layout_height="50.0dp"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/itemsListView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:layout_width="80.0dp" />

    <Button
        android:text="Go Back to Event"
        android:layout_width="match_parent"
        android:background="#ffd1d1"
        android:textColor="@android:color/white"
        android:id="@+id/backButton"
        android:layout_weight="50"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="40dp" />

</RelativeLayout>
