<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apockestafe.team19.EventInfo">

    <Button
        android:text="Back to Events"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#ffd1d1"
        android:textColor="@android:color/white"
        android:layout_marginStart="11dp"
        android:id="@+id/backButton"
        android:layout_width="125dp" />

    <Button
        android:text="View Items"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/itemsButton"
        android:layout_above="@+id/MapButton"
        android:background="#e8e4a4"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <ListView
        android:layout_width="300.0dp"
        android:layout_height="150.0dp"
        android:id="@+id/friendsListView"
        android:layout_above="@+id/itemsButton"
        android:layout_alignStart="@+id/eventDescription"
        android:layout_marginBottom="12dp" />

    <Button
        android:text="List Ride"
        android:layout_height="40dp"
        android:background="#e3d1ff"
        android:textColor="@android:color/white"
        android:id="@+id/listRideButton"
        android:layout_width="100dp"
        android:layout_below="@+id/itemsButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Go To Map"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/MapButton"
        android:background="#a4e8ad"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="300.0dp"
        android:textAlignment="center"
        android:id="@+id/eventDescription"
        android:layout_below="@+id/backButton"
        android:layout_centerHorizontal="true"
        android:layout_height="175.0dp" />

    <Button
        android:text = "Invite"
        android:layout_width="100dp"
        android:id="@+id/inviteButton"
        android:background="#d1e8ff"
        android:textColor="@android:color/white"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
