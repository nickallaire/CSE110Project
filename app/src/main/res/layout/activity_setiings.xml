<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apockestafe.team19.MainActivity">
    <Button
        android:id="@+id/signOutButton"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_marginTop="463dp"
        android:background="#d1e8ff"
        android:textColor="@android:color/white"
        android:text="@string/btn_sign_out"
        android:textStyle="bold" />

    <Button
        android:text="Back"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:background="#ffd1d1"
        android:textColor="@android:color/white"
        android:id="@+id/backButton" />

    <TextView
        android:text="First Name:"
        android:id="@+id/nameTextView"
        android:layout_below="@+id/backButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="55dp"
        android:layout_width="80.0dp"
        android:layout_height="50.0dp" />

    <TextView
        android:text="Last Name:"
        android:layout_width="80.0dp"
        android:layout_height="50.0dp"
        android:layout_below="@+id/nameTextView"
        android:layout_alignStart="@+id/nameTextView"
        android:layout_marginTop="28dp"
        android:id="@+id/lastNameTextView" />

    <EditText
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/firstNameEditText"
        android:layout_height="50.0dp"
        android:layout_width="200.0dp"
        android:layout_alignBaseline="@+id/nameTextView"
        android:layout_alignBottom="@+id/nameTextView"
        android:layout_toEndOf="@+id/nameTextView" />

    <EditText
        android:layout_height="50.0dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lastNameEditText"
        android:layout_width="200.0dp"
        android:layout_alignBaseline="@+id/lastNameTextView"
        android:layout_alignBottom="@+id/lastNameTextView"
        android:layout_toEndOf="@+id/lastNameTextView" />
</RelativeLayout>
