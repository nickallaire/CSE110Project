<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_ride"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apockestafe.team19.ListRideActivity">

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="43dp"
        android:background="#ffd1d1"
        android:textColor="@android:color/white"
        android:id="@+id/submitRide" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/submitRide"
        android:layout_alignParentEnd="true"
        android:background="#d1e8ff"
        android:textColor="@android:color/white"
        android:layout_marginEnd="46dp"
        android:id="@+id/cancelRide" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancelRide"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp"
        android:id="@+id/errorText" />

    <TextView
        android:text="City:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/city"
        android:layout_below="@+id/streetAddress"
        android:layout_alignStart="@+id/streetAddress" />

    <TextView
        android:text="State:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city"
        android:layout_alignStart="@+id/city"
        android:layout_marginTop="25dp"
        android:id="@+id/state" />

    <TextView
        android:text="Zipcode:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/state"
        android:layout_alignStart="@+id/state"
        android:layout_marginTop="24dp"
        android:id="@+id/zipcode" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/streetAddressValue"
        android:layout_alignBaseline="@+id/streetAddress"
        android:layout_alignBottom="@+id/streetAddress"
        android:layout_toEndOf="@+id/streetAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/stateValue"
        android:layout_below="@+id/cityValue"
        android:layout_toEndOf="@+id/state" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/cityValue"
        android:layout_alignBaseline="@+id/city"
        android:layout_alignBottom="@+id/city"
        android:layout_toEndOf="@+id/city" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/zipcodeValue"
        android:digits="0123456789"
        android:inputType="numberDecimal"
        android:layout_alignBaseline="@+id/zipcode"
        android:layout_alignBottom="@+id/zipcode"
        android:layout_toEndOf="@+id/zipcode"
        android:layout_marginStart="11dp" />

    <TextView
        android:text="Street Address:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/streetAddress"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="# of Seats:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seatCount"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/seatCountValue"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/seatCount"
        android:layout_marginStart="11dp" />

</RelativeLayout>

